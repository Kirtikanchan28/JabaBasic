class Main {
    public static void main(String[] args) {
        String s1 = "aba";
        
       
       System.out.println(isPalin(s1,true));
       
        
    }
    public static boolean isPalin(String s1 , boolean t)
    {
        String s2=new StringBuilder(s1).reverse().toString();
        if(s1.equals(s2))
            return true;
        else 
            return false;
    }
    public static boolean isPalin(String s)
    {
        int left=0;
        int right=s.length()-1;
         while(left<right)
        {
            if(s.charAt(left)!=s.charAt(right))
            {
                return false;
            }
            left++;
            right--;
        }
        return true;
    }
}
